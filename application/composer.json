{
  "name": "vagnercardosoweb/slim4-skeleton",
  "description": "Slim4 Skeleton",
  "version": "1.0.0",
  "license": "MIT",
  "authors": [
    {
      "name": "Vagner Cardoso",
      "email": "vagnercardosoweb@gmail.com"
    }
  ],
  "require": {
    "php": "^8.0",
    "php-di/php-di": "^6.2",
    "slim/psr7": "^1.1",
    "slim/slim": "^4.5",
    "symfony/var-dumper": "^5.1",
    "vlucas/phpdotenv": "^5.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^2.18"
  },
  "config": {
    "sort-packages": true,
    "process-timeout": 0,
    "optimize-autoloader": true
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Core\\": "source/"
    }
  },
  "scripts": {
    "cs:fix": "php-cs-fixer fix ../ --config=.php_cs",
    "cs:check": "php-cs-fixer fix ../ --dry-run --format=txt --verbose --diff --diff-format=udiff --config=.php_cs"
  }
}
