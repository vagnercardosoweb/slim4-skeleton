{
  "name": "vagnercardosoweb/slim4-skeleton",
  "description": "Slim4 Skeleton",
  "version": "1.0.0",
  "license": "MIT",
  "support": {
    "email": "vagnercardosoweb@gmail.com",
    "issues": "https://github.com/vagnercardosoweb/slim4-skeleton/issues",
    "source": "https://github.com/vagnercardosoweb/slim4-skeleton"
  },
  "authors": [
    {
      "name": "Vagner Cardoso",
      "email": "vagnercardosoweb@gmail.com"
    }
  ],
  "require": {
    "php": "^8.0",
    "illuminate/support": "^8.25",
    "php-di/php-di": "^6.3",
    "slim/psr7": "^1.3",
    "slim/slim": "^4.7",
    "symfony/var-dumper": "^5.2",
    "twig/twig": "^3.2",
    "vlucas/phpdotenv": "^5.3"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^2.18",
    "phpunit/phpunit": "^9.5"
  },
  "config": {
    "sort-packages": true,
    "process-timeout": 0,
    "optimize-autoloader": true
  },
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Core\\": "source/"
    }
  },
  "scripts": {
    "cs:fix": "php-cs-fixer fix ../ --config=.php_cs",
    "cs:check": "php-cs-fixer fix ../ --dry-run --format=txt --verbose --diff --diff-format=udiff --config=.php_cs"
  }
}
